{
  "name": "node-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate to start a Node.js API",
  "main": "index.js",
  "scripts": {
    "start": "node src/index.js",
    "start:dev": "nodemon src/index.js",
    "test": "jest --watchAll",
    "test:coverage": "jest --coverage"
  },
  "nodemonConfig": {
    "ignore": [
      "*.test.js"
    ]
  },
  "jest": {
    "verbose": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/index.js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tseignette/node-boilerplate.git"
  },
  "author": "tseignette",
  "license": "CC0-1.0",
  "bugs": {
    "url": "https://github.com/tseignette/node-boilerplate/issues"
  },
  "homepage": "https://github.com/tseignette/node-boilerplate#readme",
  "dependencies": {
    "@hapi/hapi": "^19.0.5",
    "mysql2": "^2.1.0",
    "sequelize": "^5.21.3",
    "sequelize-cli": "^5.5.1"
  },
  "devDependencies": {
    "jest": "^24.9.0",
    "nodemon": "^2.0.2"
  }
}
